rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to all files for authenticated users
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for backups
    match /backups/{backup} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 100 * 1024 * 1024; // 100MB limit
    }
    
    // Specific rules for exports
    match /exports/{export} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}