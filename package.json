{
  "name": "dynamic-text",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite",
    "dev:api": "vercel dev",
    "dev:performance": "vite --mode development",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "build:production": "NODE_ENV=production vite build --mode production",
    "preview": "vite preview",
    "preview:analyze": "vite preview && npx vite-bundle-analyzer dist/stats.json",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "tsc --noEmit",
    "performance:audit": "npx lighthouse http://localhost:4173 --output=html --output-path=./performance-report.html",
    "performance:measure": "node scripts/measure-performance.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "size-limit": "npx size-limit",
    "bundle:stats": "npx vite-bundle-analyzer dist/stats.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-svelte-csf": "^5.0.7",
    "@storybook/builder-vite": "^9.1.1",
    "@storybook/svelte-vite": "^9.1.1",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.6",
    "@testing-library/user-event": "^14.5.2",
    "@tsconfig/svelte": "^5.0.4",
    "@types/diff2html": "^3.0.3",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.2.0",
    "@vercel/node": "^5.3.11",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "happy-dom": "^16.7.0",
    "jsdom": "^26.0.0",
    "storybook": "^9.1.1",
    "svelte": "^5.35.5",
    "svelte-check": "^4.3.1",
    "terser": "^5.43.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@babel/standalone": "^7.28.2",
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/language": "^6.11.2",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@google/generative-ai": "^0.24.1",
    "@lezer/highlight": "^1.2.1",
    "codemirror": "^6.0.2",
    "diff": "^8.0.2",
    "diff2html": "^3.4.52",
    "dompurify": "^3.2.6",
    "firebase": "^12.0.0",
    "vercel": "^44.7.0"
  }
}
