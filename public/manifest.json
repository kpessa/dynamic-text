{
  "name": "TPN Dynamic Text Editor",
  "short_name": "TPN Editor",
  "description": "Medical TPN calculation and content management tool optimized for healthcare professionals",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "orientation": "any",
  "theme_color": "#007bff",
  "background_color": "#f8f9fa",
  "scope": "/",
  "categories": ["medical", "health", "productivity", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "/vite.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  
  "shortcuts": [
    {
      "name": "New TPN Calculation",
      "short_name": "New TPN",
      "description": "Start a new TPN calculation",
      "url": "/?action=new-tpn",
      "icons": [
        {
          "src": "/icons/icon.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Ingredient Manager",
      "short_name": "Ingredients",
      "description": "Manage TPN ingredients",
      "url": "/?action=ingredients",
      "icons": [
        {
          "src": "/icons/icon.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Calculator",
      "short_name": "Calculator",
      "description": "TPN calculation tools",
      "url": "/?action=calculator",
      "icons": [
        {
          "src": "/icons/icon.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "tpn",
      "url": "/?protocol=%s"
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [],
  
  "screenshots": [],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}